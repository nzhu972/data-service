            <property name="javax.persistence.jdbc.user" value="myuser" /> <!-- DB User -->
            <property name="javax.persistence.jdbc.password" value="p4ssw0rd1!" /> <!-- DB Password -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect"/> <!-- DB Dialect -->

            <!-- Don't use these in production -->
